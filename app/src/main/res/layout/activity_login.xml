                android:gravity="center|center_horizontal"
                android:layout_weight="0.12">
                <EditText
                    android:id="@+id/email"
                    android:layout_height="80dp"
                    android:layout_width="match_parent"
                    android:hint="email"/>
            </LinearLayout>

            <LinearLayout
